<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.training.by"
        xmlns:tns="http://www.training.by"
        elementFormDefault="qualified">

    <element name="tariffs">
        <complexType>
            <sequence>
                <element ref="tns:tariff"
                         minOccurs="1"
                         maxOccurs="unbounded" />
            </sequence>
        </complexType>
    </element>

    <element name="tariff" type="tns:TariffType" abstract="true"></element>
    <element name="smartphone" type="tns:Smartphone" substitutionGroup="tns:tariff"></element>
    <element name="internet" type="tns:Internet" substitutionGroup="tns:tariff"></element>
    <element name="only_calls" type="tns:Only_calls" substitutionGroup="tns:tariff"></element>

    <complexType name="TariffType">
        <sequence>
            <element name="name" type="string" />
            <element name="operator_name" type="string" />
            <element name="payroll" type="tns:nonNegativedecimal" />
            <element name="date" type="tns:Date" />
        </sequence>

        <attribute name="login" type="tns:Login" use="required" />
    </complexType>

    <complexType name="Smartphone">
        <complexContent>
            <extension base="tns:TariffType">
                <sequence>
                    <element name="call_prices" type="tns:Call_prices" />
                    <element name="free_minute" type="nonNegativeInteger" />
                    <element name="internet_price" type="tns:nonNegativedecimal" />
                    <element name="free_mgb" type="tns:nonNegativedecimal" />
                    <element name="parameters" type="tns:Parameters" />
                </sequence>

                <attribute name="tarrifing" type="tns:Tarrifing" use="optional" default="oneminute" />
            </extension>
        </complexContent>
    </complexType>

    <complexType name="Internet">
        <complexContent>
            <extension base="tns:TariffType">
                <sequence>
                    <element name="internet_price" type="tns:nonNegativedecimal" />
                    <element name="free_mgb" type="tns:nonNegativedecimal" />
                </sequence>
            </extension>
        </complexContent>
    </complexType>

    <complexType name="Only_calls">
        <complexContent>
            <extension base="tns:TariffType">
                <sequence>
                    <element name="call_prices" type="tns:Call_prices" />
                    <element name="free_minute" type="nonNegativeInteger" />
                    <element name="parameters" type="tns:Parameters" />
                </sequence>

                <attribute name="tarrifing" type="tns:Tarrifing" use="optional" default="oneminute" />
            </extension>
        </complexContent>
    </complexType>

    <simpleType name="nonNegativedecimal">
        <restriction base="decimal">
            <minInclusive value="0"/>
        </restriction>
    </simpleType>

    <complexType name="Call_prices">
        <sequence>
            <element name="inside" type="tns:nonNegativedecimal" />
            <element name="outside" type="tns:nonNegativedecimal" />
            <element name="landline" type="tns:nonNegativedecimal" />
            <element name="sms" type="tns:nonNegativedecimal" />
        </sequence>
    </complexType>

    <complexType name="Parameters">
        <sequence>
            <element name="favorite_number" type="nonNegativeInteger" />
            <element name="connection_fee" type="tns:nonNegativedecimal" />
        </sequence>
    </complexType>

    <complexType name="Date">
        <sequence>
            <element name="start" type="date" />
            <element name="finish" type="date" />
        </sequence>
    </complexType>

    <simpleType name="Login">
        <restriction base="ID">
            <pattern value="[a-zA-Z0-9]{3,20}"/>
        </restriction>
    </simpleType>

    <simpleType name="Tarrifing">
        <restriction base="string">
            <enumeration value="oneminute"></enumeration>
            <enumeration value="12seconds"></enumeration>
        </restriction>
    </simpleType>

</schema>